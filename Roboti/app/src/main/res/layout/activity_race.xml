<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/movementLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/blackLine">

    <LinearLayout
        android:id="@+id/robots_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/usersRobot"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/robot_padding"
            android:src="@drawable/greenrobot0"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/bot1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/robot_padding"
            android:layout_below="@id/usersRobot"
            android:src="@drawable/robot2"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/bot2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/robot_padding"
            android:layout_below="@id/bot1"
            android:src="@drawable/robot5"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/bot3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/robot_padding"
            android:layout_below="@id/bot2"
            android:src="@drawable/robot12"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <View
        android:id="@+id/finishLine"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light" />

    </RelativeLayout>

    <View
        android:id="@+id/blackLine"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/word_layout"
        android:background="@android:color/black" />

    <RelativeLayout
        android:id="@+id/word_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:gravity="center"
            android:text="Vědecké výzkumy přinesl_ překvapivé výsledky."
            android:minLines="3"
            android:maxLines="3"
            android:textSize="@dimen/text_size" />

        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/word"
            android:padding="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/firstButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button2"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:text="konkurenceschopná"
                android:textSize="@dimen/button_text_size" />


            <Button
                android:id="@+id/secondButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="konkurence schopná"
                android:background="@drawable/button2"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

