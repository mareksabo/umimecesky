<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:activity=".activity.MainActivity">


    <ImageView
        android:id="@+id/roboti"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:adjustViewBounds="true"
        android:background="@null"
        android:clickable="false"
        android:contentDescription="@string/image_showing_robot"
        android:scaleType="centerInside"
        android:src="@drawable/icon" />

    <Button
        android:id="@+id/trainingButton"
        android:layout_weight="15"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="@dimen/main_buttons_padding"
        android:paddingStart="@dimen/main_buttons_padding"
        android:paddingRight="@dimen/main_buttons_padding"
        android:paddingEnd="@dimen/main_buttons_padding"
        android:text="@string/train_button_name"
        android:textAllCaps="false"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/raceButton"
        android:layout_weight="15"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/button"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="@dimen/main_buttons_padding"
        android:paddingStart="@dimen/main_buttons_padding"
        android:paddingRight="@dimen/main_buttons_padding"
        android:paddingEnd="@dimen/main_buttons_padding"
        android:text="@string/race_button_name"
        android:textAllCaps="false"
        android:textSize="32sp"/>

