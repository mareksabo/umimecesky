<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <TextView
        android:id="@+id/sectionName"
        android:layout_height="wrap_content"
        android:layout_width="0sp"
        android:layout_weight="3"
        android:text="Vybrane slova"
        android:textSize="@dimen/level_text_size"
        android:padding="@dimen/text_padding"
        android:gravity="center|left" />


    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:layout_width="0sp"
        android:layout_height="30sp"
        android:layout_margin="20sp"
        android:layout_weight="2"
        app:rcProgress="2"
        app:rcSecondaryProgress="3"
        app:rcMax="7"
        app:rcRadius="15sp"
        app:rcBackgroundPadding="3sp"
        app:rcReverse="false"
        app:rcProgressColor="@android:color/holo_green_light"
        app:rcSecondaryProgressColor="@android:color/holo_green_dark"
        app:rcBackgroundColor="#808080" />


</LinearLayout>