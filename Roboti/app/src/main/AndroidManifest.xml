<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.muni.fi.umimecesky">

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".App"
        android:theme="@style/AppTheme">

        <!-- for huge displays -->
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />

        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TrainingActivity"
            android:label="@string/action_bar_name"
            android:parentActivityName=".activity.ListCategoriesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ListCategoriesActivity"
            android:label="@string/action_bar_name"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RaceActivity"
            android:label="@string/action_bar_name"
            android:parentActivityName=".activity.LevelRaceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LevelRaceActivity"
            android:label="@string/action_bar_name"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".labyrinth.LabyrinthActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/action_bar_name"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="landscape"  />
    </application>

</manifest>