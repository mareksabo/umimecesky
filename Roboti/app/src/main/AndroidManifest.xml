<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.muni.fi.umimecesky">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TrainingActivity"
            android:screenOrientation="portrait"
            android:label="@string/action_bar_name" />
        <activity
            android:name=".activity.ListCategoriesActivity"
            android:screenOrientation="portrait"
            android:label="@string/action_bar_name" />
        <activity
            android:name=".activity.RaceActivity"
            android:screenOrientation="portrait"
            android:label="@string/action_bar_name" />
        <activity
            android:name=".activity.LevelRaceActivity"
            android:screenOrientation="portrait"
            android:label="@string/action_bar_name" />
    </application>

</manifest>